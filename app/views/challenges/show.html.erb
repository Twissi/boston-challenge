<div class="challenge">
  <div class="date <%= @challenge.approved ? "entypo-check" : "" %>">
    <%= @challenge.date.to_s(:day_and_month) %>
    <span class="title"><%= @challenge.title %></span>
  </div>

  <div class="content">
    <div class="description">
      # <%= @challenge.text %>
    </div>

    <% if @challenge.answerPic.present? %>
      <%= image_tag @challenge.answerPic, class: 'answer_pic' %>
    <% end %>

    <% if @challenge.answerText.present? %>
      <p>
        <%= @challenge.answerText %>
      </p>
    <% end %>

    <% if @challenge.approved? %>
      <p>
        <a href="http://m.facebook.com/sharer.php?u=<%= challenge_url(@challenge) %>" class="button">Share</a>
      </p>
    <% end %>
  </div>
</div>



